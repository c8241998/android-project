                    <Space
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
